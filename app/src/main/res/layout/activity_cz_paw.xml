<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33333300"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ccffffff"
            >
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/id_close"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/umeng_update_close_bg_normal"
                />
            <TextView
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="重置密码"
                android:textSize="30sp"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
     <TextView
         android:layout_marginTop="5dp"
         android:gravity="center"
         android:textColor="#000000"
         android:textStyle="bold"
         android:textSize="25sp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="用户名"
         />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:counterOverflowTextAppearance="@style/MyOverflowText"
        app:errorTextAppearance="@style/MyErrorStyle">
        <EditText
            android:id="@+id/id_cz_user"
            android:background="@drawable/user_bg"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="请输入用户名"
            android:singleLine="true"
            />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="新密码"
        />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_new_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:counterMaxLength="18"
        app:counterOverflowTextAppearance="@style/MyOverflowText"
        app:errorTextAppearance="@style/MyErrorStyle">
        <EditText
            android:id="@+id/id_cz_password"
            android:background="@drawable/user_bg"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="请输入新密码 6-18位"
            android:singleLine="true"
            />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认新密码"
    />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_new_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:counterMaxLength="18"
        app:counterOverflowTextAppearance="@style/MyOverflowText"
        app:errorTextAppearance="@style/MyErrorStyle">
        <EditText
            android:id="@+id/id_cz_pwd"
            android:background="@drawable/user_bg"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="请再输入新密码 6-18位"
            android:singleLine="true"
            />
    </android.support.design.widget.TextInputLayout>
    <Button
        android:id="@+id/id_cz_modify"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确定"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/login_bg"
        />
    <ImageView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:src="@mipmap/logol1"
        android:layout_height="match_parent"
        />
</LinearLayout>
