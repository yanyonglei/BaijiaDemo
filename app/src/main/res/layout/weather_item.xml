<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="10dp"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardBackgroundColor="@color/amber_primary_dark"
    >
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffff99"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:src="@drawable/onv"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="35dp"
                />
            <View android:layout_width="1dp"
                android:layout_height="35dp"
                android:background="#C6C6C6"
                />
            <TextView
                android:text="地区"
                android:textSize="15sp"
                android:layout_weight="2.5"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:id="@+id/weather_dis"
                android:gravity="center|left"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C6C6C6"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:src="@drawable/mih"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="35dp"
                />
            <View android:layout_width="1dp"
                android:layout_height="35dp"
                android:background="#C6C6C6"
                />
            <TextView
                android:text="星期"
                android:textSize="15sp"
                android:layout_weight="2.5"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:id="@+id/weather_date"
                android:gravity="center|left"
            />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C6C6C6"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:src="@drawable/abnormal_wind"
                />
            <View android:layout_width="1dp"
                android:layout_height="35dp"
                android:background="#C6C6C6"
                />
            <TextView
                android:id="@+id/wind"
                android:layout_weight="2.5"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:text="白天温度"
                android:textSize="15sp"
                android:gravity="center|left"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C6C6C6"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:src="@drawable/w0"
                />
            <TextView
                android:id="@+id/day_wendu"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:text="白天温度"
                android:textSize="18sp"
                android:gravity="center|left"
                />
            <View android:layout_width="1dp"
                android:layout_height="35dp"
                android:background="#C6C6C6"
                />
            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:src="@drawable/w30"
                />
            <TextView
                android:id="@+id/night_wendu"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:text="夜间温度"
                android:textSize="18sp"
                android:gravity="center|left"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C6C6C6"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:src="@drawable/w0"
                />
            <TextView
                android:id="@+id/status_day"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:text="白天"
                android:textSize="18sp"
                android:gravity="center|left"
                />
            <View android:layout_width="1dp"
                android:layout_height="35dp"
                android:background="#C6C6C6"
                />
            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:src="@drawable/w30"
                />
            <TextView
                android:id="@+id/status_night"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:text="夜间"
                android:textSize="18sp"
                android:gravity="center|left"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C6C6C6"
            />
    </LinearLayout>

</android.support.v7.widget.CardView>
