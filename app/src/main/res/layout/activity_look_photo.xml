<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#996633"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:textSize="25sp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="图片欣赏"
            android:gravity="center"
            android:background="#993200aa"
            />
    </android.support.v7.widget.CardView>
    <ImageView
        style="@style/MyImageView"
        />
   <LinearLayout

       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1"
       android:orientation="horizontal"
       >
       <ImageView
           style="@style/MyImageView_vectial"
           />
       <TextView
           android:id="@+id/id_music"
           android:text="音乐"
           android:gravity="center"
           android:textSize="45sp"
           android:textColor="#ff0000"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"
           />
       <ImageView
           style="@style/MyImageView_vectial"
           />
       <TextView
           android:id="@+id/id_fullview"
           android:text="全景"
           android:gravity="center"
           android:textSize="45sp"
           android:textColor="#002233"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"
           />
       <ImageView
           style="@style/MyImageView_vectial"
           />
   </LinearLayout>
    <ImageView
        style="@style/MyImageView"
        />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <ImageView
            style="@style/MyImageView_vectial"
            />
        <TextView
            android:id="@+id/id_yingshi"
            android:text="影视"
            android:gravity="center"
            android:textSize="45sp"
            android:textColor="#0000ff"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <ImageView
            style="@style/MyImageView_vectial"
            />
        <TextView
            android:id="@+id/id_arm"
            android:text="军队"
            android:gravity="center"
            android:textSize="45sp"
            android:textColor="#00ff00"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <ImageView
            style="@style/MyImageView_vectial"
            />
    </LinearLayout>
    <ImageView
        style="@style/MyImageView"
        />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <ImageView
            style="@style/MyImageView_vectial"
            />
        <TextView
            android:id="@+id/id_sport"

            android:text="运动"
            android:gravity="center"
            android:textSize="45sp"
            android:textColor="#9977ff"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <ImageView
            style="@style/MyImageView_vectial"
            />
        <TextView
            android:id="@+id/id_black_tech"
            android:text="科技"
            android:gravity="center"
            android:textSize="45sp"
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <ImageView
            style="@style/MyImageView_vectial"
            />
    </LinearLayout>
    <ImageView
       style="@style/MyImageView"
        />
</LinearLayout>